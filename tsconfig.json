{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "target": "es2022",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vitest/globals"],
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@spec/*": ["test/*"]
    },
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  }
}
